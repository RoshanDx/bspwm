#Rofi Theme
theme="$HOME/.config/rofi/themes/cheatsheet.rasi"

awk '/^[a-z]/ && last {print "<small>",$0,"\t",last,"</small>"} {last=""} /^#/{last=$0}' ~/.config/sxhkd/sxhkdrc |
    column -t -s $'\t' |
    rofi -dmenu -i -p "ï„œ" -markup-rows -no-show-icons -theme "$theme" -width 1000 -lines 15 -yoffset 40 -monitor -1
 
