
# Reload sxhkd
super + Escape
	pkill -usr1 -x sxhkd; notify-send 'Keymap' 'Config Reloaded!'

# Quit/Restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# Close and kill
super + {_,shift + }q
	bspc node -{c,k}
	
# Terminal tile mode
super + Return
	$TERMINAL

# Terminal floating mode
super + {_,shift +}Return
	tdrop -ma -w 40% -y 30% -x 30% $TERMINAL

# Alternate between tiled and monocle
super + m
	bspc desktop -l next

# Move current window to a pre-selected space
super + shift + m
    bspc node -n last.!automatic
    
# Rotate tree
super + shift + {d,a}
    bspc node @/ -C {forward,backward}
    
# Toggle beetwen floating & tiled
super + t
    bspc node -t "~"{floating,tiled}

# Send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# Swap the current node and the biggest window
super + g
	bspc node -s biggest.local

# Set the window state
super + {shift + t,s,f}
	bspc node -t {pseudo_tiled,floating,fullscreen}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# Focus the next/previous window in the current desktop
super + {_,shift + }Tab
	bspc node -f {next,prev}.local.!hidden.window

# Focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# Focus the last node/desktop
super + {grave,c}
	bspc {node,desktop} -f last

# Focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# Focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -100 0,bottom 0 100,top 0 -100,right 100 0}

# Contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -100 0,top 0 100,bottom 0 -100,left 100 0}

# Move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-100 0,0 100,0 -100,100 0}

# Lockscreen
ctrl + alt + l
    betterlockscreen --lock

# Rofi Menus/Applets
super + {space,c,w,x,n,Print,slash}
	sh ~/.config/rofi/scripts/{{app_menu,calculator,window_menu,power_menu,networkmanager_dmenu,screenshot,cheatsheet}

# Toggle picom
super + alt + o
	sh ~/.config/picom/{picom-toggle}

# Ranger
super + r
	alacritty -e ranger
	
# Volume Up
XF86AudioRaiseVolume
	changevolume up

# Volume Down
XF86AudioLowerVolume
	changevolume down

# Volume Mute
XF86AudioMute
	changevolume mute
	
# Brightness Up
XF86MonBrightnessUp
	changebrightness up

# Brightness Down
XF86MonBrightnessDown
	changebrightness down
	
# Pavucontrol
super + shift + p
	tdrop -ma -w 40% -y 30% -x 30% -n Pavucontrol --class=Pavucontrol pavucontrol
	
# Thunar
super + e
	tdrop -ma -w 40% -y 30% -x 30% -n thunar --class=thunar thunar

